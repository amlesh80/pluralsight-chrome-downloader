{
    "name":"PluralSight auto downloader",
    "version":"0.1.0",
    "manifest_version": 2,
    "description":"A downloader for PluralSight videos",
    "icons": {
        "16": "img/icon-16.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "permissions": [
        "downloads",
        "tabs",
        "webNavigation",
        "webRequest",
        "*://app.pluralsight.com/*"
    ],
    "page_action": {
        "default_title": "Print this page",
        "default_icon": {
            "19": "img/icon-19.png",
            "38": "img/icon-38.png"
        },
        "default_popup": "popup.html"
    },
    "background":{
        "scripts": ["background.js"]
    }
}
