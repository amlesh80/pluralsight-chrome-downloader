{
    "name":"PluralSight auto downloader",
    "version":"0.1.0",
    "manifest_version": 2,
    "description":"A downloader for PluralSight videos",
    "permissions": [
        "downloads",
        "tabs",
        "webNavigation",
        "webRequest",
        "*://app.pluralsight.com/*"
    ],
    "page_action": {
        "default_title": "Print this page",
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        },
        "default_popup": "popup.html"
    },
    "background":{
        "scripts": ["background.js"]
    }
}
